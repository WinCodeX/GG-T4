<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-100 to-white">
  <div class="bg-white p-8 rounded-3xl shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">Log In</h2>
    <p class="text-center text-gray-500 text-sm mb-6">Welcome back! Please enter your details</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :login, "Username or Email", class: "block text-sm text-gray-600 mb-1" %>
        <%= f.email_field :login, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      </div>

      <div class="mb-2">
        <%= f.label :password, class: "block text-sm text-gray-600 mb-1" %>
        <%= f.password_field :password, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      </div>

      <div class="text-right mb-4">
        <%= link_to "forgot password ?", new_password_path(resource_name), class: "text-sm text-purple-500 hover:underline" %>
      </div>

      <%= f.submit "Log in", class: "w-full bg-purple-500 text-white py-2 rounded-xl hover:bg-purple-600 transition mb-4" %>
    <% end %>

    <div class="text-center text-sm text-gray-500 mb-2">Or Continue With</div>

    <div class="flex justify-center gap-4 mb-4">
      <a href="#" class="flex items-center gap-2 border px-4 py-2 rounded-xl shadow-sm hover:shadow transition">
        <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google" class="w-5 h-5" />
        <span class="text-sm">Google</span>
      </a>
      <a href="#" class="flex items-center gap-2 border px-4 py-2 rounded-xl shadow-sm hover:shadow transition">
        <img src="https://www.svgrepo.com/show/452196/facebook.svg" alt="Facebook" class="w-5 h-5" />
        <span class="text-sm">Facebook</span>
      </a>
    </div>

    <p class="text-center text-sm text-gray-600">
      Donâ€™t have account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-purple-500 hover:underline" %>
    </p>
  </div>
</div>



<%= render "devise/shared/links" %>
