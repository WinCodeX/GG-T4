<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-100 to-white">
  <div class="bg-white p-8 rounded-3xl shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">Sign Up</h2>
    <p class="text-center text-gray-500 text-sm mb-6">Create your account to get started</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :username, class: "block text-sm text-gray-600 mb-1" %>
        <%= f.text_field :username, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm text-gray-600 mb-1" %>
        <%= f.email_field :email, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm text-gray-600 mb-1" %>
        <%= f.password_field :password, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-sm text-gray-600 mb-1" %>
        <%= f.password_field :password_confirmation, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      </div>

      <%= f.submit "Sign up", class: "w-full bg-purple-500 text-white py-2 rounded-xl hover:bg-purple-600 transition mb-4" %>
    <% end %>

    <p class="text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Log in", new_session_path(resource_name), class: "text-purple-500 hover:underline" %>
    </p>
  </div>
</div>


<%= render "devise/shared/links" %>
