<section class="bg-[#1f202d] rounded-3xl px-6 md:px-16 py-20 mt-6 mb-16 shadow-xl">
<div class="flex flex-col md:flex-row items-center justify-between gap-10">
  
  <!-- 🧾 Left: Headline + Actions -->
  <div class="md:w-1/2 space-y-6">
    <h1 class="text-4xl md:text-5xl font-bold text-dracula-foreground leading-tight">
      Manage All Your Deliveries<br>Under One Roof
    </h1>
    <p class="text-lg text-dracula-comment">
      Track. Notify. Scale. GG4App brings everything together—seamlessly.
    </p>

    <div class="flex space-x-4">
      <a href="#" class="button-primary">Get Started</a>
      <a href="#" class="button-primary bg-gradient-to-r from-dracula-purple to-dracula-cyan text-white">Learn More</a>
    </div>
  </div>

  <!-- 📱 Right: Image -->
  <div class="md:w-1/2 flex justify-center">
    <%= image_tag "hero-phone.jpg",
      alt: "App Preview",
      class: "w-[80px] md:w-[120px] lg:w-[240px] shadow-lg rounded-xl border-gradient object-contain" %>
  </div>
</div>
</section>



  <!-- 🔢 Stats Section -->
