    <div class="max-w-5xl mx-auto grid grid-cols-2 sm:grid-cols-4 gap-8">
      <div>
        <h3 class="text-3xl font-bold text-dracula-purple">25K+</h3>
        <p class="text-dracula-comment">Deliveries</p>
      </div>
      <div>
        <h3 class="text-3xl font-bold text-dracula-pink">14+</h3>
        <p class="text-dracula-comment">Cities</p>
      </div>
      <div>
        <h3 class="text-3xl font-bold text-dracula-cyan">500+</h3>
        <p class="text-dracula-comment">Businesses</p>
      </div>
      <div>
        <h3 class="text-3xl font-bold text-dracula-orange">99%</h3>
        <p class="text-dracula-comment">Delivery Accuracy</p>
      </div>
    </div>
  </section>

  <!-- 💡 Features Section -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-10">
