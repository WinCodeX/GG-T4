<!-- CreatePackage Modal - Step-by-Step -->
<div id="create-package-modal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden z-50" data-controller="create-package">
  <div class="bg-[#1e1e2f] text-[#f8f8f2] rounded-2xl p-6 w-full max-w-md shadow-2xl relative">

    <!-- Close Button -->
    <button data-action="click->create-package#closeModal" class="absolute top-4 right-4 text-2xl">&times;</button>

    <!-- Dynamic Step Content -->
    <div data-create-package-target="stepContent"></div>

    <!-- Navigation -->
    <div class="flex justify-between mt-6">
      <button data-action="click->create-package#prevStep" class="px-4 py-2 rounded-lg bg-gray-700 hover:bg-gray-600">Back</button>
      <button data-action="click->create-package#nextStep" class="px-4 py-2 rounded-lg bg-[#6b46c1] hover:bg-[#9f7aea]">Next</button>
    </div>

  </div>
</div>
